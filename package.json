{
  "name": "paperclip-workspaces",
  "version": "1.0.1",
  "displayName": "Paperclip",
  "description": "Paperclip tooling for VS Code",
  "private": true,
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "engines": {
    "yarn": "^3.1.1"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@docusaurus",
      "**/@docusaurus/**"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "codecov": "^3.7.1",
    "eslint": "^7.4.0",
    "husky": "^7.0.0",
    "lerna": "^4.0.0",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1",
    "typescript": "^4.2.3"
  },
  "resolutions": {
    "vscode-languageserver-protocol": "3.15.3"
  },
  "scripts": {
    "test": "lerna run test",
    "build": "yarn workspaces foreach -viA run build",
    "lint": "lerna run lint",
    "link:tandem": "yarn link $TANDEM_HOME/packages/designer && yarn link $TANDEM_HOME/packages/design-system",
    "postinstall2": "yarn workspaces foreach -t run build",
    "clean": "find ./ -name node_modules -exec rm -rf {} \\;",
    "publish:local": "for PKG in `ls packages`; do cd packages/$PKG; yalc publish; cd ../..; done;",
    "clean:hard": "rm -rf yarn.lock && yarn clean",
    "build:watch": "yarn workspaces foreach -vipA --jobs=unlimited run build:watch",
    "publish:packages": "lerna publish from-package --yes",
    "publish:marketplace": "yarn workspaces foreach -vipA run publish:marketplace",
    "publish:documentation": "yarn workspaces foreach -vipA run publish:documentation",
    "version": "lerna clean --yes && lerna bootstrap --ignore-scripts -- --package-lock-only --no-audit",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crcn/paperclip.git"
  },
  "author": "",
  "license": "",
  "bugs": {
    "url": "https://github.com/crcn/paperclip/issues"
  },
  "homepage": "https://github.com/crcn/paperclip#readme",
  "packageManager": "yarn@3.1.1"
}
