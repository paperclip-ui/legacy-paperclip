      <PercentCell good
        title="Lines"
        percentage="83"
        coveredCount="290"
        totalCount="300" />
    </Row>
    <Row>
      <FileCell good percentage="40">path/to/file.pc</FileCell>
      <PercentCell okay
        title="Lines"
        percentage="83"
        coveredCount="290"
