<style>
  @mixin icon {
    background-repeat: no-repeat;
    width: 1em;
    height: 1em;
    position: relative;
  }

  @export {
    @mixin chaotic-1 {
      @include icon;
      background-image: url(./chaotic-1.svg);
      background-size: 0.75em;
    }

    @mixin grow {
      @include icon;
      background-image: url(./grow.svg);
      background-size: 1em 1em;
      top: -2px;
    }

    @mixin link {
      @include icon;
      background-image: url(./link.svg);
      background-size: 1em 1em;
      top: -2px;
    }
    @mixin shapes {
      @include icon;
      background-image: url(./shapes.svg);
      background-size: 1em 1em;
      top: -2px;
    }
    @mixin plug {
      @include icon;
      background-image: url(./plug.svg);
      background-size: 0.8em 0.8em;
    }
    @mixin reactjs {
      @include icon;
      background-image: url(./reactjs.svg);
      background-size: 0.9em 0.9em;
    }
    @mixin chevron-right {
      @include icon;
      background-image: url(./chevron-right.svg);
      background-size: 0.7em 0.7em;
      background-position: 50%;
    }
    @mixin brush {
      @include icon;
      background-image: url(./brush.svg);
      background-size: 0.7em 0.7em;
      background-position: 50%;
    }
    @mixin gears {
      @include icon;
      background-image: url(./gears.svg);
      background-size: 1em;
      background-position: 50%;
    }
    [data-name=chaotic-1] {
      @include chaotic-1;
    }

    [data-name=grow] {
      @include grow;
    }

    [data-name=link] {
      @include link;
    }

    [data-name=shapes] {
      @include shapes;
    }
    [data-name=brush] {
      @include brush;
    }
    [data-name=plug] {
      @include plug;
    }
    [data-name=reactjs] {
      @include reactjs;
    }
    [data-name=chevron-right] {
      @include chevron-right;
    }
    [data-name=gears] {
      @include gears;
    }
  }

  .icon {
    display: inline-block;
    font-size: 2em;
  }

  .preview {
    font-size: 21px;
    display: flex;
  }
</style>


