<import src="file:///Users/crcn/Developer/private/paperclip/packages/tandem-design-system/src/atoms.pc"
  as="atoms" />
<style>
  @mixin mobile {
    @media screen and (max-width: 480px) {
      @content;
    }
  }


  .app {
    font-family: sans-serif;
  }

  .checkbox {
    position: relative;
    width: 30px;
    height: 30px;
    .dummy {
      width: 100%;
      height: 100%;
      border: 1px solid currentColor;
      border-radius: 99px;
      position: absolute;
      pointer-events: none;
      top: 0px;
      left: 0px;
      &:before {
        visibility: hidden;
        font-size: 16px;
        color: currentColor;
        content: "âœ”";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
      }
    }

    input {
      opacity: 0;
      top: 0px;
      left: 0px;
      margin: 0px;
      width: 100%;
      height: 100%;
      z-index: 1;
      &:checked ~ .dummy {
        background: rgb(90, 209, 245);
        color: rgba(255, 255, 255, 0.8);
        border-color: rgb(90, 209, 245);
        &:before {
          visibility: visible;
        }
      }
    }
  }

  .todo-items {
    list-style-type: none;
    margin: 0px;
    padding: 0px;
    color: #777;
    li {
      background: #e0e0e0;
      padding: 32px;
      &.alt {
        background: #e9e9e9;
      }
    }
  }

  .header {
    background: #999;
    color: white;
    padding: 32px;
    h1 {
      margin: 0px;
      margin-bottom: 16px;
    }

    form {
      display: flex;
      gap: 8px;
    }

    button, input {
      border-radius: 99px;
      border: 1px solid white;
      padding: 8px 12px;
    }

    button {
      background: white;
      color: #999;
      font-weight: 600;
      white-space: nowrap;
    }

    input {
      background: transparent;
      @include mobile {
        width: 100%;
      }
      &::placeholder {
        color: white;
      }
    }
  }
</style>


<!--
  @frame { visible: false }
-->
<div component as="Checkbox" class="checkbox">
  <input type="checkbox" {checked?} />
  <div class="dummy" />
</div>


<!--
  @frame { visible: false }
-->
<li export component as="TodoItem" class:alt="alt">
  <style>
    display: flex;
    align-items: center;
    gap: 16px;
  </style>
  <Checkbox {checked?} />
  {children}
</li>

<!--
  @frame { visible: false }
-->
<div export component as="App" class="app">
  <div class="header">
    <h1>{title}</h1>
    <form {onSubmit}>
      <input placeholder="new todo" />
      <button>Add todo</button>
    </form>
  </div>
  <ul class="todo-items">{todos}</ul>
</div>

<!--
  @frame { height: 768, title: "Todos / Desktop", width: 1024, x: -1648, y: 1556 }
