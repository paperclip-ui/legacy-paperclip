<!--
  @frame { visible: false }
-->
<div export
  component
  as="Container"
  {tagName?}
  {style?}
  {className?}
  {onScroll}>
  <style>
    height: 100%;
    width: 100%;
    overflow-y: scroll;
    position: relative;
  </style>
  <div style={contentStyle}>
    <style>
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
    </style>
    {children}
  </div>
  <Resizer style={resizerStyle} />
</div>


<!--
  @frame { visible: false }
-->
<div component as="Resizer" {style}>
  <style>
    height: 100%;
    width: 100%;
    overflow: scroll;
    position: absolute;
    top: 0;
    left: 0;
    pointer-events: none;
    box-sizing: border-box;
  </style>
</div>



