{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "lib",
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "*-test",
    "lib",
    "index.d.ts",
    "test",
    "*.config.ts"
  ],
  "filesGlob": ["./src/**/*.ts"]
}
