    <Thumbnail bgClassName="$thumb-inner">
      <style>
        .thumb-inner {
          background-image: url("./thumb1.png");
        }
      </style>
    </Thumbnail>
    <Thumbnail hasChanges />
    <Thumbnail hasChanges active />
    <Thumbnail />
    <Thumbnail />
    <Thumbnail />
    <Thumbnail />
    <Thumbnail />
    <Thumbnail />
    <Thumbnail />
    <Thumbnail />
    <Thumbnail />
    <Thumbnail />
    <Thumbnail />
  </fragment>}
  content={<fragment>
    <Comparison>
      <Screenshot a
        title="A: devffsklfdsfdsfsdfjsdfskdfsdjkflsdfjkjklfsjnfdskl">
