{
  "srcDir": "./src",
  "compilerOptions": {
    "target": ["react"],
    "outDir": "./lib",
    "assetOutDir": "./lib/assets",
    "embedAssetMaxSize": 0,
    "mainCSSFileName": "main.css"
  },
  "lintOptions": {
    "enforceVars": [
      "font-family",
      "color",
      "background",
      "background-color",
      "margin",
      "margin-left",
      "margin-right",
      "margin-top",
      "margin-bottom",
      "padding",
      "padding-left",
      "padding-right",
      "padding-top",
      "padding-bottom",
      "border",
      "border-left",
      "border-right",
      "border-top",
      "border-bottom"
    ]
  }
}
